<!DOCTYPE html>
<html>

<head>
    <title>Issue Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include utilities/css.ejs %>
</head>

<body class="flat-green" ng-app="issueTracker">

    <div class="app-container">

        <div class="row content-container">
            <nav class="navbar navbar-inverse navbar-fixed-top navbar-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-expand-toggle">
                            <i class="fa fa-bars icon"></i>
                        </button>
                        <ol class="breadcrumb navbar-breadcrumb">
                            <li class="active">Issue Tracker</li>
                        </ol>
                         <ol class="breadcrumb navbar-breadcrumb">

                        </ol>

                        <button type="button" class="navbar-right-expand-toggle pull-right visible-xs">
                            <i class="fa fa-th icon"></i>
                        </button>

                    </div>
                   
                    <ul class="nav navbar-nav navbar-right">
                        <button type="button" class="navbar-right-expand-toggle pull-right visible-xs">
                            <i class="fa fa-times icon"></i>
                        </button>

                        <li class="dropdown profile">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">User <span class="caret"></span></a>
                            <ul class="dropdown-menu animated fadeInDown">
                                <li class="profile-img">

                                </li>
                                <li>
                                    <div class="profile-info">
                                        <h4 class="username">User</h4>
                                        <p>User@email.com</p>
                                        <div class="btn-group margin-bottom-2x" role="group">
                                            <!--<button type="button" class="btn btn-default"><i class="fa fa-user"></i> Profile</button> -->
                                            <button type="button" class="btn btn-default"><i class="fa fa-sign-out"></i> Logout</button>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>


                    </ul>
                </div>
            </nav>
            <div class="side-menu sidebar-inverse">
                <nav class="navbar navbar-default" role="navigation">
                    <div class="side-menu-container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/">
                                <div class=""><i class="icon fa fa-bug"></i> Bugs-Buddy</div>
                                
                            </a>
                            <button type="button" class="navbar-expand-toggle pull-right visible-xs">
                                <i class="fa fa-times icon"></i>
                            </button>
                        </div>
                        <div ng-controller="indexCtrl" >
                            <ul class="nav navbar-nav">
                                <li ng-class="{ active: isActive('/')}">
                                    <a href="/" >
                                        <span class="icon fa fa-tachometer"></span><span class="title">Dashboard</span>
                                    </a>
                                </li>
                                <li  ng-class="{ active: isActive('/new-incident/')}">
                                    <a href="/new-incident/" >
                                        <span class="icon fa fa-info-circle"></span><span class="title">Create New Incident</span>
                                    </a>
                                </li>

                                <li class="panel panel-default dropdown">
                                    <a data-toggle="collapse" href="#dropdown-table">
                                        <span class="icon fa fa-search"></span><span class="title">Search</span>
                                    </a>
                                    <!-- Dropdown level 1 -->
                                    <div id="dropdown-table" class="panel-collapse collapse">
                                        <div class="panel-body">
                                            <ul class="nav navbar-nav">
                                                <li ng-class="{ active: isActive('/search-incident/')}">
                                                    <a href="/search-incident/" >
                                                        Search by Incident ID
                                                    </a>
                                                </li>
                                                <li ng-class="{ active: isActive('/search-date/')}">
                                                    <a href="/search-date/" >
                                                        Search by Date
                                                    </a>
                                                </li>
                                                <li ng-class="{ active: isActive('/search-app/')}">
                                                    <a href="/search-app/" >
                                                        Search by Application
                                                    </a>
                                                </li>

                                            </ul>
                                        </div>
                                    </div>
                                 </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.navbar-collapse -->
                </nav>
            </div >
            <!-- Main Content -->
            <div id="loader" style="display : none">
            <div class="spinner">
                <div class="bounce1"></div>
                <div class="bounce2"></div>
                <div class="bounce3"></div>
            </div>
                </div>

            <div ng-view>
            
            </div>
           
        </div>
        <footer class="app-footer">
            <div class="wrapper">
                <b> Â© 2016 Bugs-buddy</b>
            </div>
        </footer>

          <% include utilities/scripts.ejs %>

        </div>

</body>

</html>
